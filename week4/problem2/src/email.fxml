<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/19" fx:controller="EmailController">
    <Label text="To:" />
    <TextField fx:id="txtToField" promptText="Enter recipient email address" />

    <Label text="CC:" />
    <TextField fx:id="txtCcField" promptText="Enter CC email address" />

    <Label text="Bcc:" />
    <TextField fx:id="txtBccField" promptText="Enter BCC email address" />

    <Label text="Subject:" />
    <TextField fx:id="txtSubjectField" promptText="Enter email subject" />

    <Label text="Message Body:" />
    <TextArea fx:id="txtMessageBodyField" promptText="Type your message here" />

    <HBox>
        <Button onAction="#sendButtonClicked" text="Send" />
    </HBox>
</VBox>
